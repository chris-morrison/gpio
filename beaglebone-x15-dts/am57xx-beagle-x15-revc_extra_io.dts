  uart1_pins_default: uart1_pins_default {
    pinctrl-single,pins = <
      DRA7XX_CORE_IOPAD( 0x3400 + 4 * 249, PIN_INPUT_SLEW | MUX_MODE0 ) // B27 uart0 rxd    P18.30
