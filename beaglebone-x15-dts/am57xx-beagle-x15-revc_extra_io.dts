  uart5_pins_default: uart5_pins_default {
		pinctrl-single,pins = <
      DRA7XX_CORE_IOPAD( 0x3400 + 4 * 225, PIN_INPUT_SLEW | MUX_MODE2 ) // AC07 uart4 rxd   P17.7
